@page "/post/create"

@if(ShowDialog)
{
    <div class="modal-dialog-centered">
        <strong>Create A Post</strong>
        <hr/>
        <EditForm Model="@NewPost" OnInvalidSubmit="@HandleValidSubmit" >
            <div class="form-group">
                <label for="title">Title</label>
                <InputText id="title" class="form-control" @bind-Value="NewPost.Title" placeholder="Title"></InputText>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <InputNumber id="category" class="form-control" @bind-Value="NewPost.CategoryId"></InputNumber>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <InputText id="content" class="form-control" @bind-Value="NewPost.Content"></InputText>
            </div>
            <button type="submit" class="btn btn-primary">Add Post</button>
        </EditForm>
        <a class="btn btn-outline-primary" @onclick="Close">Close</a>
    </div>
}
@if (ErrorMessage != null)
{
    <strong>Error occured</strong>
}

